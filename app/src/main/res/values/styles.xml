<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAppearance">@style/Text</item>
        <item name="actionOverflowMenuStyle">@style/CMOptionsMenu</item>
    </style>

    <style name="CMOptionsMenu" parent="Theme.AppCompat.DayNight">
        <item name="android:popupBackground">@color/colorPrimary</item>
    </style>


    <style name="MainButton">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/button_main_txt</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/poppins_semi_bold</item>
    </style>

    <style name="Text">
        <item name="fontFamily">@font/poppins_regular</item>
    </style>

</resources>
